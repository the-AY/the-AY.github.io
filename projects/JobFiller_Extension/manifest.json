{
    "manifest_version": 3,
    "name": "Job Hunter Assistant",
    "version": "1.0",
    "description": "Autofill job applications and extract keywords from job descriptions.",
    "permissions": [
        "contextMenus",
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Job Hunter Profile"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}